extends ../layout.jade
block contenido
    h2(class='pacifico big blue') Menú
    p Productos de calidad en tu mesa
    div(class="container")
    each producto in productos
            div(class="card col-md-auto", style="width:400px;float:left;max-width:400px;max-height:400px;padding-bottom:10px;margin:10px auto;")
                img(src="#{producto.imagen}", alt="#{producto.titulo}", class="card-img-top" width="318px", height="180px")
                div(class="card-body")
                h4(class="card-title")= producto.titulo
                p(class="card-text")= producto.descripcion
                a(class="btn btn-primary", href="#{producto.imagen}") Ver más
